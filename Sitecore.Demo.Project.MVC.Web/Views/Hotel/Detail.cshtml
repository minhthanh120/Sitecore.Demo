﻿@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation
@using Sitecore.Demo.Project.MVC.Web.Models
@model Hotel
<!-- Detail Start -->
@if (Model != null)
{
    <!-- Carousel Start -->
    <div id="carousel" class="w-75 h-75 carousel slide" data-ride="carousel">
        <ol class="carousel-indicators" style="margin-top: 10%;">
            @for (int i = 0; i < Model.Images.Count; i++)
            {
                if (i == 0)
                {
                    <li data-target="#carousel" data-slide-to="@i" class="active"></li>
                }
                else
                {
                    <li data-target="#carousel" data-slide-to="@i"></li>
                }
            }
        </ol>
        <div class="carousel-inner img-fluid">
            @{
                int count = 0;
            }
            @foreach (var slide in Model.Images)
            {
                var activeClass = count == 0 ? "active" : string.Empty;
                <div class="carousel-item @activeClass">
                        @slide
                </div>
                count++;
            }

        </div>

        <a class="carousel-control-prev" href="#carousel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carousel" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <!-- Carousel End -->
    <div class="team">
        <div class="container">
            <div class="section-header text-center">
                <p>Our Partner</p>
                <h2>@Model.Title</h2>
                <div class="text-center">
                    <div class="w-50 mx-auto">
                        <h4 class="text-left position-absolute">Price: @Model.Price$</h4>
                        <h4 class="text-right">Rating: @Model.Score/5</h4>
                        <h4 class="text-center position-absolute">Phone: @Model.Phone</h4>
                    </div>
                </div>
            </div>
            <h4 class="text-center">@Model.Address</h4>
            <h4 class="text-center">@Model.CallToAction</h4>


        </div>
    </div>
}
<!-- Detail End -->