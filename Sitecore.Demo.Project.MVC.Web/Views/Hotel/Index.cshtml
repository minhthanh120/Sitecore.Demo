﻿@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation
@using Sitecore.Demo.Project.MVC.Web.Models
@model HotelModel
<!-- Team Start -->
@if (Model != null && Model.Hotels != null && Model.Hotels.Count > 0)
{
    <div class="team">
        <div class="container">
            <div class="section-header text-center">
                <p>Meet Our Partners</p>
            </div>
            <div class="row">
                @foreach (var hotel in Model.Hotels)
                {
                    <div  class="col-lg-3 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                        <div class="team-item">
                            <div class="team-img">
                                @hotel.Image
                            </div>
                            <div class="team-text">
                                <a href="/hotel?itemId=@hotel.Id">@hotel.Title</a>
                                <p>@hotel.Address</p>
                                <p>@hotel.Price$</p>
                            </div>
                            <div class="team-social">
                                <a class="social-tw" href="@hotel.CallToAction"><i class="fas fa-link"></i></a>
                                <a class="social-fb" href=""><i class="">@hotel.Score/10</i></a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
}
<!-- Team End -->
